---
import { cn } from '@/utils/theme'
import type { HTMLAttributes } from 'astro/types'
import { cva, type VariantProps } from 'class-variance-authority'

export const inputVariants = cva(
  'block rounded-base whitespace-nowrap focus-visible:outline-none ring-base focus-visible:ring focus-visible:ring-offset-2 ring-offset-surface disabled:disabled max-w-full placeholder:text-base-subtler p-12 w-full shadow-sm bg-surface resize-none border border-input text-body-sm',
  {
    variants: {
      variant: {
        primary: 'bg-surface',
        secondary: 'bg-base-bold'
      }
    },
    defaultVariants: {
      variant: 'primary'
    }
  }
)

export type Props = HTMLAttributes<'textarea'> & VariantProps<typeof inputVariants>

const { class: className, variant, ...props } = Astro.props
---

<textarea rows={6} class={cn(inputVariants({ variant }), className)} {...props}></textarea>
