---
import Bold from '@/components/typography/Bold.astro'
import { cn } from '@/utils/theme'
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'li'> {
  label?: string
}

const { class: className, label, ...props } = Astro.props
---

<li class={cn('marker:text-details-subtle text-inherit text-body-inherit', className)} {...props}>
  {label && <Bold class='text-base'>{label}:</Bold>}
  <slot />
</li>
