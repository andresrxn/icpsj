---
import FigCaption from '@/components/typography/FigCaption.astro'
import { cn } from '@/utils/theme'
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'figure'> {
  caption?: string | astroHTML.JSX.Element
}
const { class: className, caption, ...props } = Astro.props
---

<figure class={cn('flex flex-col gap-12 my-20', className)} {...props}>
  <slot />
  {caption && <FigCaption>{caption}</FigCaption>}
</figure>
